<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ejercicioparcial.VentasController">
   <center>
      <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label style="-fx-font-weight: bold; -fx-font-size: 1.2em;" text="PRODUCTOS DISPONIBLES" />
            <TableView fx:id="tvProductos" prefHeight="400.0" prefWidth="500.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colNombre" prefWidth="250.0" text="Nombre" />
                <TableColumn fx:id="colPrecio" prefWidth="80.0" text="Precio" />
                <TableColumn fx:id="colStock" prefWidth="80.0" text="Stock" />
              </columns>
            </TableView>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Cantidad a comprar:" />
                  <TextField fx:id="tfCantidad" alignment="CENTER_RIGHT" prefWidth="60.0" text="1" />
                  <Button fx:id="btnAgregarAlCarrito" mnemonicParsing="false" onAction="#AgregarAlCarrito" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" text="➕ Agregar al Carrito" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <right>
      <VBox alignment="TOP_CENTER" prefHeight="556.0" prefWidth="300.0" spacing="10.0" style="-fx-border-color: #ccc; -fx-border-width: 1; -fx-padding: 10;" BorderPane.alignment="CENTER">
         <children>
            <Label style="-fx-font-weight: bold; -fx-font-size: 1.2em;" text="CARRITO DE COMPRAS" />
            <ListView fx:id="lvCarrito" prefHeight="350.0" prefWidth="250.0" VBox.vgrow="ALWAYS" />
            <Label fx:id="lblTotal" text="TOTAL: $0.00">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Button fx:id="btnFinalizar" mnemonicParsing="false" onAction="#FinalizarCompra" prefHeight="35.0" prefWidth="250.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 1.1em;" text="✅ Finalizar Compra" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </right>
   <bottom>
      <BorderPane BorderPane.alignment="CENTER">
         <left>
            <Label fx:id="lblEstado" text="Estado: Sistema listo." BorderPane.alignment="CENTER" />
         </left>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </BorderPane>
   </bottom>
</BorderPane>
